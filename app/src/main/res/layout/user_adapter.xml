<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:id="@+id/request_container_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="6dp"
        app:cardCornerRadius="7.5dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/lyt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="15dp"
                    android:orientation="vertical"
                    android:paddingEnd="12dp"
                    android:paddingStart="12dp">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/request_no_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="start"
                        android:text="@string/request_number"
                        android:textAlignment="viewStart"
                        android:textColor="#7f90a0"
                        android:textSize="12sp" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/request_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:gravity="start"
                        android:maxLines="1"
                        android:textAlignment="viewStart"
                        android:textColor="#3e4360"
                        android:textSize="14sp" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/type_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="13dp"
                        android:layout_marginTop="22dp"
                        android:gravity="start"
                        android:text="@string/type"
                        android:textAlignment="viewStart"
                        android:textColor="#7f90a0"
                        android:textSize="12sp" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/type_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="18dp"
                        android:gravity="start"
                        android:maxLines="1"
                        android:textAlignment="viewStart"
                        android:textColor="#3e4360"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lyt_status"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="15dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingEnd="12dp"
                    android:paddingStart="12dp">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/status_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="end"
                        android:text="@string/status"
                        android:textAlignment="viewEnd"
                        android:textColor="#7f90a0"
                        android:textSize="12sp" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/status_type"
                        android:layout_width="68dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/rounded_bg"
                        android:includeFontPadding="false"
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:textSize="12sp" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/raised_on_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="13dp"
                        android:layout_marginTop="22dp"
                        android:gravity="end"
                        android:text="@string/raised_on"
                        android:textAlignment="viewEnd"
                        android:textColor="#7f90a0"
                        android:textSize="12sp" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/raised_on_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="18dp"
                        android:gravity="end"
                        android:maxLines="1"
                        android:textAlignment="viewEnd"
                        android:textColor="#3e4360"
                        android:textSize="14sp"
                        tools:text="hello" />

                </LinearLayout>

            </RelativeLayout>

            <View
                android:id="@+id/anchor_vertical"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#e9eff4" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/clickButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:gravity="center"
                    android:text="@string/check_eligibility"
                    android:textAlignment="center"
                    android:textColor="#029f97"
                    android:textSize="14sp" />
            </RelativeLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</layout>